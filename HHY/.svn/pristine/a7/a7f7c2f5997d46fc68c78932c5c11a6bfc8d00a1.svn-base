    _typeLable = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, self.frame.size.width-40, self.frame.size.height)];
    _typeLable.textAlignment = NSTextAlignmentLeft;
    [self addSubview:_typeLable];
}

